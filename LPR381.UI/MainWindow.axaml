<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LPR381.UI.MainWindow"
        Title="LPR381.UI">
	<DockPanel>
		<!-- Main Content -->
		<TabControl Margin="10">

			<!-- Problem Formulation Tab -->
			<TabItem Header="Problem Formulation">
				<TabControl Margin="10">
					<!-- Manual Input -->
					<TabItem Header="Manual Input">
						<ScrollViewer>
							<StackPanel Margin="10">

								<!-- Algorithm Selection -->
								<TextBlock Text="Select Algorithm" FontWeight="Bold" Margin="0,0,0,5"/>
								<ComboBox Width="200">
									<ComboBoxItem Content="Primal Simplex" />
									<ComboBoxItem Content="Revised Simplex" />
									<ComboBoxItem Content="Branch &amp; Bound" />
									<ComboBoxItem Content="Cutting Plane" />
									<ComboBoxItem Content="Knapsack" />
								</ComboBox>

								<!-- Objective -->
								<TextBlock Text="Objective Function" FontWeight="Bold" />
								<StackPanel Orientation="Horizontal" Margin="0,5">
									<ComboBox Width="100">
										<ComboBoxItem Content="Max" />
										<ComboBoxItem Content="Min" />
									</ComboBox>
									<TextBox Width="400" Watermark="e.g. 3x1 + 2x2 + 5x3" Margin="10,0"/>
								</StackPanel>

								<!-- Constraints -->
								<TextBlock Text="Constraints" FontWeight="Bold" Margin="0,10,0,5"/>
								<StackPanel>
									<StackPanel Orientation="Horizontal" Margin="0,5">
										<TextBox Width="250" Watermark="Coefficients e.g. 2x1 + 3x2"/>
										<ComboBox Width="70" Margin="5,0">
											<ComboBoxItem Content="&lt;=" />
											<ComboBoxItem Content="&gt;=" />
											<ComboBoxItem Content="=" />
										</ComboBox>
										<TextBox Width="80" Watermark="RHS"/>
									</StackPanel>
								</StackPanel>
								<Button Content="Add Constraint" Width="150" Margin="0,10"/>

								<!-- Sign Restrictions -->
								<TextBlock Text="Variable Sign Restrictions" FontWeight="Bold" Margin="0,10,0,5"/>
								<TextBox Width="400" Watermark="e.g. bin bin + -" />

								<!-- Preview -->
								<Button Content="Preview Canonical Form" Width="200" Margin="0,15"/>
								<TextBox AcceptsReturn="True" Height="150" Watermark="Canonical form will appear here"/>
							</StackPanel>
						</ScrollViewer>
					</TabItem>

					<!-- File Input -->
					<TabItem Header="File Input">
						<StackPanel Margin="10">

							<!-- Algorithm Selection -->
							<TextBlock Text="Select Algorithm" FontWeight="Bold" Margin="0,0,0,5"/>
							<ComboBox Width="200">
								<ComboBoxItem Content="Primal Simplex" />
								<ComboBoxItem Content="Revised Simplex" />
								<ComboBoxItem Content="Branch &amp; Bound" />
								<ComboBoxItem Content="Cutting Plane" />
								<ComboBoxItem Content="Knapsack" />
							</ComboBox>


							<TextBlock Text="Load LP Model From File" FontWeight="Bold"/>
							<Button Content="Select File..." Width="150" Margin="0,10"/>
							<TextBox AcceptsReturn="True" Height="200" Watermark="File preview will appear here"/>
							<Button Content="Preview Canonical Form" Width="200" Margin="0,10"/>
							<TextBox AcceptsReturn="True" Height="150" Watermark="Canonical form will appear here"/>
						</StackPanel>
					</TabItem>
				</TabControl>
			</TabItem>

			<!-- Canonical Form Tab -->
			<TabItem Header="Canonical Form">
				<TextBox AcceptsReturn="True" Margin="10" IsReadOnly="True"
						 Watermark="Canonical form will be displayed here"/>
			</TabItem>

			<!-- Iterations Tab -->
			<TabItem Header="Iterations">
				<ScrollViewer>
					<TextBox AcceptsReturn="True" Margin="10" IsReadOnly="True"
							 Watermark="Tableau iterations will be displayed here"/>
				</ScrollViewer>
			</TabItem>

			<!-- Solution Tab -->
			<TabItem Header="Solution">
				<StackPanel Margin="10">
					<TextBlock Text="Optimal Solution" FontWeight="Bold" Margin="0,0,0,10"/>
					<TextBox AcceptsReturn="True" Height="200" IsReadOnly="True"
							 Watermark="Final solution (z value and variables)"/>
				</StackPanel>
			</TabItem>

			<!-- Sensitivity Analysis Tab -->
			<TabItem Header="Sensitivity Analysis">
				<StackPanel Margin="10">
					<TextBlock Text="Sensitivity Analysis " FontWeight="Bold"/>
					<TextBox AcceptsReturn="True" Height="300" IsReadOnly="True"
							 />
				</StackPanel>
			</TabItem>
		</TabControl>

	</DockPanel>
</Window>
